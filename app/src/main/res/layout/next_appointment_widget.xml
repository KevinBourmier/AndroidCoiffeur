<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/widget_margin"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <TextView
        android:id="@+id/widget_main_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="#fff"
        android:text="@string/my_next_appointment"/>


    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_main_title"
        android:textColor="#fff"
        android:textSize="18sp"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/appwidget_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_text"
        android:textColor="#fff"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/widget_no_appointment"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_main_title"
        android:text="@string/no_element"
        android:textColor="#fff"
        android:textSize="18sp"/>


    <ProgressBar
        style=""
        android:id="@+id/widget_loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:layout_below="@id/widget_main_title"/>



</RelativeLayout>